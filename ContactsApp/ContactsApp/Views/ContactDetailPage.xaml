<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsApp.Views.ContactDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <StackLayout Orientation="Horizontal">
            <Label Text="First Name: " FontSize="Medium" />
            <Label Text="{Binding FirstName}" FontSize="Medium"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Last Name: " FontSize="Medium" />
            <Label Text="{Binding LastName}" FontSize="Medium"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Description:" FontSize="Medium" />
            <Label Text="{Binding Description}" FontSize="Medium"/>
        </StackLayout>

        
    </StackLayout>
    
</ContentPage>